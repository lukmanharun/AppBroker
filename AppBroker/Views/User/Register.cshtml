@model Infrastructure.RegisterDTO;
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - AppBroker</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/AppBroker.styles.css" asp-append-version="true" />
</head>
<body>
    <div class="container mt-5">
        <div class="row d-flex justify-content-center">
            <div class="col-md-6">
                <div class="card px-5 py-5">
                    @using (Html.BeginForm("Register", "User", HttpMethod.Post))
                    {
                        @Html.AntiForgeryToken()
                        <div class="form-floating mb-3">
                            @Html.EditorFor(s=>s.FirstName,new {htmlAttributes = new {@class="form-control",@type="text",@placeholder="name@example.com"} })
                            <label for="FirstName">First Name</label>
                            @Html.ValidationMessageFor(s=>s.FirstName)
                        </div>
                        <div class="form-floating mb-3">
                            @Html.EditorFor(s=>s.LastName,new {htmlAttributes = new {@class="form-control",@type="text",@placeholder="name@example.com"} })
                            <label for="LastName">Last Name</label>
                            @Html.ValidationMessageFor(s=>s.LastName)
                        </div>
                        <div class="form-floating mb-3">
                            @Html.EditorFor(s=>s.Email,new {htmlAttributes = new {@class="form-control",@type="email",@placeholder="name@example.com"} })
                            <label for="Email">Email address</label>
                            @Html.ValidationMessageFor(s=>s.Email)
                        </div>
                        <div class="form-floating mb-3">
                            @Html.EditorFor(s=>s.Password,new {htmlAttributes = new {@class="form-control",@type="password",@placeholder="******"} })
                            <label for="Password">Password</label>
                            @Html.ValidationMessageFor(s=>s.Password)
                        </div>
                        <div class="form-floating mb-3">
                            @Html.EditorFor(s=>s.RepeatPassword,new {htmlAttributes = new {@class="form-control",@type="password",@placeholder="******"} })
                            <label for="RepeatPassword">Repeat Password</label>
                            @Html.ValidationMessageFor(s=>s.RepeatPassword)
                        </div>
                        <div class="text-center mb-3">
                            <button type="submit" value="submit" class="btn btn-primary" style="width:100%">Sign Up</button>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
</body>
</html>

